{
   "manifest_version": 2,
  "name": "Salesforce Search",
  "description": "Add a right click menu to search selected text in your Salesforce Org",
  "version" : "1.2",
  "icons": { "16": "sfdcLogo16.png",
            "48": "sfdcLogo48.png",
            "128": "sfdcLogo128.png" },
  "background": {
    "scripts": ["search.js"]
  },
   "browser_action": {
    "default_popup": "options.html" 
  },
  "options_page": "options.html",
  "permissions": ["contextMenus", "storage"],
}
